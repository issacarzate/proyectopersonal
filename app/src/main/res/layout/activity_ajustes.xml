<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightB"
    tools:context="com.example.issac.lmf.AjustesActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:paddingTop="25dp"
        android:src="@drawable/profile" />

    <EditText
        android:id="@+id/setup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@color/lightW"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:hint="Nombre de Usuario"
        android:inputType="textMultiLine"
        android:padding="14dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/setup_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setup_username"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@color/lightW"
        android:drawableLeft="@drawable/name"
        android:ems="10"
        android:hint="Nombre Completo"
        android:inputType="textMultiLine"
        android:padding="14dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/setup_country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setup_fullname"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@color/lightW"
        android:drawableLeft="@drawable/country"
        android:ems="10"
        android:hint="PaÃ­s"
        android:inputType="textMultiLine"
        android:padding="14dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/setup_information_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setup_profile_image"
        android:layout_alignStart="@+id/setup_profile_image"
        android:layout_below="@+id/setup_country_name"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="Guardar"
        android:textColor="@color/lightW"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
